<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg_jesus_birth"
    tools:context=".QuizActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/RelativeLayout01"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="16dp">
        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/icon_undo"
            android:padding="0dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/transparent"
            android:contentDescription="back"/>
        <ImageView
            android:id="@+id/musicOnOffBtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/icon_sound_off"
            android:backgroundTint="@color/transparent"
            android:padding="0dp"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/backBtn" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_toEndOf="@id/musicOnOffBtn"
            android:background="@drawable/bg_white_all_round"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingHorizontal="28dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark : "
                android:textColor="@color/secondary"
                android:fontFamily="@font/aerospace_bold"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/markTxt"
                android:textSize="18sp"
                android:textColor="@color/secondary"
                android:fontFamily="@font/aerospace_bold"
                android:text="0"/>
        </LinearLayout>
        <TextView
            android:id="@+id/timer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:text="99"
            android:fontFamily="@font/aerospace_bold"
            android:textSize="24sp"
            android:background="@drawable/bg_white_all_round"
            android:textColor="@color/secondary"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_white_all_round"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingHorizontal="28dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question : "
                android:textColor="@color/secondary"
                android:fontFamily="@font/aerospace_bold"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/questionNo"
                android:textSize="18sp"
                android:textColor="@color/secondary"
                android:fontFamily="@font/aerospace_bold"
                android:text="99 / 99"/>
        </LinearLayout>

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/RelativeLayout01"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="false"
            android:background="@drawable/bg_semiblack_card"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginVertical="20dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">


                <TextView
                    android:id="@+id/question"
                    style="@style/QuestionTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="മോശ ഇസ്രായേൽ ജനത്തിൽ നിന്ന് 70 പേരെ സമാഗമകൂടാരത്തിനുചുറ്റും വിളിച്ചുകൂട്ടിയപ്പോൾ കർത്താവ് മോശയിൽ നിന്നെടുത്ത് അവർക്കു നല്കിയതെന്ത്?"
                    android:textColor="@color/white" />
                <LinearLayout
                    android:id="@+id/opt1Layout"
                    style="@style/optionLayoutStyle">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:fontFamily="@font/latobold"
                        android:textSize="18sp"
                        android:textColor="@color/secondary"
                        android:paddingEnd="8dp"/>
                    <TextView
                        android:id="@+id/option1"
                        style="@style/QuestionOptions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="പൗരോഹിത്യം\nAbcd" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/opt2Layout"
                    style="@style/optionLayoutStyle">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B"
                        android:fontFamily="@font/latobold"
                        android:textSize="18sp"
                        android:textColor="@color/secondary"
                        android:paddingEnd="8dp"/>
                    <TextView
                        android:id="@+id/option2"
                        style="@style/QuestionOptions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ചൈതന്യം"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/opt3Layout"
                    style="@style/optionLayoutStyle">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C"
                        android:fontFamily="@font/latobold"
                        android:textSize="18sp"
                        android:textColor="@color/secondary"
                        android:paddingEnd="8dp"/>
                    <TextView
                        android:id="@+id/option3"
                        style="@style/QuestionOptions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ചൈതന്യം"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/opt4Layout"
                    style="@style/optionLayoutStyle">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D"
                        android:fontFamily="@font/latobold"
                        android:textSize="18sp"
                        android:textColor="@color/secondary"
                        android:paddingEnd="8dp"/>
                    <TextView
                        android:id="@+id/option4"
                        style="@style/QuestionOptions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ബലിപീഠം"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>