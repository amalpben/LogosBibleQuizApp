<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".HelpActivity"
android:background="@drawable/app_bg_jesus_birth">

<RelativeLayout
    android:id="@+id/nav"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="372dp"
    android:layout_marginTop="4dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/aerospace_bold"
        android:text="LOGOS QUIZ APP"
        android:textColor="@color/white"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/icon_home" />
</RelativeLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/nav">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="175dp"
                android:layout_height="170dp"
                android:src="@drawable/info_shot_1"
                android:backgroundTint="@color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:paddingEnd="16dp"
                android:text="Settings: You can turn music and sounds on or off using the Settings button.\n Info: This section contains details about the app and the developer, such as:\n
                - App version\n
                - Developer name/contact\n
                - App description and purpose.\n Help: This page itself serves as the Help section, providing guidance and instructions\ for using the app or navigating its features."
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="175dp"
                android:layout_height="60dp"
                android:src="@drawable/info_shot_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:paddingEnd="16dp"
                android:text="Home Button: Press this button to return to the main screen of the app at any time. It provides quick access to the app's primary features and navigation options."
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="175dp"
                android:layout_height="80dp"
                android:src="@drawable/info_shot_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:paddingEnd="16dp"
                android:text="Logos Quiz Button:The Logos Quiz button is the play button for the Logos Quiz.\n Syllabus Button:Navigate to the main syllabus of the Logos Quiz.\n The Logos Quiz will be conducted based on the following chapter"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="175dp"
                android:layout_height="45dp"
                android:src="@drawable/info_shot_4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:paddingEnd="16dp"
                android:text="General Quiz: The button will take you to the General Quiz page, where you can choose between three types of quizzes: Daily, Weekly, and Monthly Quiz."
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="175dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/info_shot_5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:paddingEnd="16dp"
                android:text="Total Stars: The button shows how many stars you have collected from the Logos Quiz."
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="175dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/info_shot_6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:paddingEnd="16dp"
                android:text="Daily Streak: This counter tracks how many consecutive days you have participated in the quiz. It resets if you miss a day.\n
Weekly Streak: This counter measures how many consecutive weeks you have taken part in the quiz at least once a week. It resets if a week passes without participation.\n
Monthly Streak: This counter records how many consecutive months you have engaged with the quiz at least once a month. It resets if a month goes by without any participation."
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="175dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/info_shot_8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:paddingEnd="16dp"
                android:text="A star icon with a count of 0/30, which could represent a total number of stars or achievements you can earn in the book.\n An eye icon with a count of 0/322, which likely represents the total number of views or questions viewed in the book."
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="175dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/info_shot_7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:paddingEnd="16dp"
                android:text="The pen icon with numbers (0/0): This might represent tasks or questions that you've answered correctly out of the total available in that session.\n The eye icon with numbers (0/0): This could indicate how many questions or sections you've viewed or completed out of the total in that chapter.\n The star ratings in the interface represent levels of performance based on the percentage of correct answers you achieve in the session:\n1 star=40% or more,2 star=60% or more ,3 star=90% or more "
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="175dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/info_shot_9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:paddingEnd="16dp"
                android:text="The interface in the image you shared seems to be from an app that offers daily quizzes and tracks your activity related to these quizzes. Here's an explanation of the elements shown in the interface:\n Daily Quiz: Title indicating that this is a daily quiz activity.\n Calendar icon with 'NA': Likely shows the availability or schedule status of the quiz. NA could mean Not Available or that no specific date is set.\n Pen icon with 0/0: This indicates the number of correct answers you've provided out of the total questions available in the quiz.\nFire icon with 0Days: This shows the number of consecutive days you have participated in the quiz without missing a day.\n Timer symbols: These appear to indicate the remaining time to participate in the current quiz.\n Text below the timer (മത്തായി :3 in Malayalam, translating to Matthew: 3): This likely refers to the specific topic or syllabus of the quiz, suggesting that today's quiz is related to Matthew: 3 from a text or book."
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>