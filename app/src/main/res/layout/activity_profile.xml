<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@drawable/wood_bg"
    >

    <TextView
        android:id="@+id/appName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logos Quiz App '24"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:paddingHorizontal="20dp"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/appName"
        android:text="Hi, Name"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:paddingHorizontal="20dp"
        />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:text="@string/profile_description"
        android:paddingHorizontal="20dp"

        />
    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:text="YOUR SCORE:"
        android:paddingHorizontal="20dp"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:id="@+id/scoreVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/score"
        app:layout_constraintStart_toEndOf="@+id/score"
        app:layout_constraintTop_toTopOf="@+id/score"
        />
    <TextView
        android:id="@+id/totQuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/score"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:text="QUESTIONS :"
        android:paddingHorizontal="20dp"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:id="@+id/totQuestVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/totQuest"
        app:layout_constraintStart_toEndOf="@+id/totQuest"
        app:layout_constraintTop_toTopOf="@+id/totQuest" />
    <TextView
        android:id="@+id/totQuestView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/totQuestVal"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:text="QUESTIONS VIEWED:"
        android:paddingHorizontal="20dp"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:id="@+id/totQuestViewVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/totQuestView"
        app:layout_constraintStart_toEndOf="@+id/totQuestView"
        app:layout_constraintTop_toTopOf="@+id/totQuestView" />

</androidx.constraintlayout.widget.ConstraintLayout>